---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Landing Page X" />
    <meta property="og:description" content="Landing Page X" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Landing Page X" />
    <meta name="twitter:description" content="Landing Page X" />

    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>{title}</title>

    <script
      async
      type="text/javascript"
      src="https://static.senja.io/dist/platform.js"></script>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        /* 1 rem = 10 px */
        font-size: 62.5%;
      }

      *,
      *::before,
      *::after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        list-style: none;
        outline: none;
        font-size: 1.6rem;
        font-weight: normal;
      }

      body {
        /* Back to default 16px by default */
        background-color: #fcfcfc;
        font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI",
          Roboto, Ubuntu;
      }

      .underline {
        text-decoration: underline;
      }

      .bold-800 {
        font-weight: 800;
      }

      .bold-700 {
        font-weight: 700;
      }

      .bold-600 {
        font-weight: 600;
      }

      ul {
        padding-left: 1.2rem;
      }

      .md-content h1,
      .md-content h2,
      .md-content h3 {
        padding: 1rem 0rem 0.5rem 0;
      }
    </style>
  </body>
</html>
