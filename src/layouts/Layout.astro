---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        /* 1 rem = 10 px */
        font-size: 62.5%;
      }

      body {
        font-size: 1.6rem;
      }

      *,
      *::before,
      *::after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        list-style: none;
        outline: none;
        font-weight: normal;
      }

      body {
        /* Back to default 16px by default */
        font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI",
          Roboto, Ubuntu;
      }

      .underline {
        text-decoration: underline;
      }

      .bold-800 {
        font-weight: 800;
      }

      .bold-700 {
        font-weight: 700;
      }

      .bold-600 {
        font-weight: 600;
      }

      ul {
        padding-left: 1.2rem;
      }

      .md-content h1,
      .md-content h2,
      .md-content h3 {
        padding: 1rem 0rem 0.5rem 0;
      }

      ::-webkit-input-placeholder,
      :-moz-placeholder,
      ::-moz-placeholder,
      :-ms-input-placeholder,
      ::-ms-input-placeholder,
      ::placeholder {
        /* WebKit, Blink, Edge */
        color: #666;
      }

      ::placeholder {
        /* Internet Explorer 10-11 */
        color: #666;
      }

      .cta-start {
        display: flex;
        gap: 0.75rem;
        flex-direction: column;
      }

      .cta {
        margin-top: 7rem;
        display: flex;
        gap: 2rem;
      }

      .cta-submit {
        display: flex;
        flex-direction: column;
        margin-top: 3.4rem;
        height: 4rem;
      }

      .cta-submit button {
        display: flex;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        border: 0;
        padding: 0;
        background: #00e;
        color: #fff;
        text-align: center;
        height: 4rem;
        width: 15rem;
        border-radius: 1rem;
        cursor: pointer;
        box-shadow: 0 0.4rem 0.4rem 0 rgba(0, 0, 0, 0.25);
      }

      .cta-submit button:hover {
        background: #0000eecc;
      }

      .arrow-delimiter {
        display: flex;
        flex-direction: column;
        margin-top: 3rem;
      }

      .cta-business {
        max-width: 29rem;
        gap: 0.75rem;
        display: flex;
        flex-direction: column;
      }

      .cta-business-title {
        color: #000;
        font-size: 2rem;
        font-weight: 700;
      }

      .cta-start input {
        height: 4rem;
        width: 29rem;
        padding-left: 1rem;
        border-radius: 1rem;
        border: solid 0.1rem grey;
      }

      /* Media query for high-resolution screens */
      @media screen and (min-width: 2000px) {
        html {
          font-size: 78.125%;
        }
      }

    </style>
  </body>
</html>
