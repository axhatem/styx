---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        /* 1 rem = 10 px */
        font-size: 62.5%;
      }

      body {
        font-size: 1.6rem;
      }

      *,
      *::before,
      *::after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        list-style: none;
        outline: none;
        font-weight: normal;
      }

      body {
        /* Back to default 16px by default */
        font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI",
          Roboto, Ubuntu;
      }

      .underline {
        text-decoration: underline;
      }

      .bold-800 {
        font-weight: 800;
      }

      .bold-700 {
        font-weight: 700;
      }

      .bold-600 {
        font-weight: 600;
      }

      ul {
        padding-left: 1.2rem;
      }

      .md-content h1,
      .md-content h2,
      .md-content h3 {
        padding: 1rem 0rem 0.5rem 0;
      }

      ::-webkit-input-placeholder,
      :-moz-placeholder,
      ::-moz-placeholder,
      :-ms-input-placeholder,
      ::-ms-input-placeholder,
      ::placeholder {
        /* WebKit, Blink, Edge */
        color: #666;
      }

      ::placeholder {
        /* Internet Explorer 10-11 */
        color: #666;
      }

      .cta-start, .cta-business {
        display: flex;
        gap: 1rem;
        flex-direction: column;
      }

      .cta-business {
        max-width: 52rem;
      }

      .cta {
        padding: 0 0.75rem 0.75rem 5.25rem;
        margin-top: 7rem;
        display: flex;
        gap: 2rem;
      }

      .cta-submit {
        display: flex;
        flex-direction: column;
        margin-top: 4.16rem;
        height: 4.20rem;
      }

      .cta-submit button {
        display: flex;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        border: 0;
        padding: 0;
        background: #00e;
        color: #fff;
        text-align: center;
        height: 5rem;
        width: 15rem;
        cursor: pointer;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.25);
        border-radius: 3rem;
      }

      .cta-submit button:hover {
        background: #0000eecc;
      }

      .arrow-delimiter {
        display: flex;
        flex-direction: column;
        margin-top: 3.5rem;
      }

      .cta-business-title {
        color: #000;
        font-size: 2.4rem;
        font-weight: 700;
      }

      .cta-start input {
        height: 4rem;
        width: 29rem;
        font-size: 1.1rem;
        padding-left: 1rem;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.25);
        border: solid 0.1rem grey;
        border-radius: 1rem;
      }

      .btn, .btn:link, .btn:visited {
        -webkit-transition: all .2s;
        transition: all .2s;
        position: relative;
        cursor: pointer; 
      }

    .btn::after {
      background-color: #00e;
      content: "";
      border-radius: 3rem;

      display: inline-block;
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      -webkit-transition: all .5s;
      transition: all .5s; 
    }

    .btn:hover {
      -webkit-transform: translateY(-.1rem);
              transform: translateY(-.1rem);
      -webkit-box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
              box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2); 
    }


    .btn:hover::after {
      -webkit-transform: scaleX(1.2) scaleY(1.4);
              transform: scaleX(1.2) scaleY(1.4);
      opacity: 0;
     }

    .btn:active, .btn:focus {
      outline: none;
      -webkit-transform: translateY(-1px);
              transform: translateY(-1px);
      -webkit-box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
              box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2); }

          /* Media query for high-resolution screens */
      @media screen and (min-width: 2000px) {
        html {
          font-size: 78.125%;
      }
    }

    </style>
  </body>
</html>
