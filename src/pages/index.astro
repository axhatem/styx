---
import Footer from "../components/Footer.astro";
import LeftContent from "../components/left-section/LeftContent.astro";
import RightContent from "../components/right-section/RightContent.astro";
import Layout from "../layouts/Layout.astro";
import Advertisement from "../components/banner/Banner.astro";
---

<Layout title="Welcome to Astro.">
  <Advertisement />
  <div class="main">
    <div class="content">
      <LeftContent />
      <RightContent />
    </div>
    <Footer />
  </div>
</Layout>

<style>
  .main {
    min-height: 100lvh;
    display: flex;
    width: 100%;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
  }

  .content {
    display: flex;
    flex-grow: 1;
    gap: 4.5rem;
    margin-left: auto;
    margin-right: auto;
  }

