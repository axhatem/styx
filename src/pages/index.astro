---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { withBase } from "../utils/config-utils";
const blueArrowImageUrl = withBase("/images/blue-arrow.svg");
---

<Layout title="Styx" description="Styx">
  <NavBar />
  <div class="main">
    <section class="hero">
      <div class="hero-title">
        <h1>
          <div class="left-border"></div>
           Augmente tes chances de<br />prendre la bonne <span class="decision"
            >décision.</span
          >
        </h1>
      </div>
      <div class="cta">
        <div class="cta-business">
          <p class="cta-business-title">ELEVE TON BUSINESS</p>
          <p class="cta-business-description">
            Tous les Dimanche, on provoque la chance de prendre la décision
            juste.
          </p>
        </div>
        <div class="arrow-delimiter">
          <Image src={blueArrowImageUrl} alt="-->" width={50} height={50} />
        </div>
        <div class="cta-start">
          <p class="cta-business-title">COMMENCE ICI</p>
          <input placeholder="Inscris ton adresse mail..." />
        </div>
        <div class="cta-submit">
          <button>Je décide</button>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  input {
    height: 4rem;
    width: 29rem;
    padding-left: 1rem;
  }

  .arrow-delimiter {
    display: flex;
    flex-direction: column;
    margin-top: 3rem;
  }

  .cta {
    margin-top: 4rem;
    display: flex;
    gap: 2rem;
  }

  .cta-submit {
    display: flex;
    flex-direction: column;
    margin-top: 3.4rem;
    height: 4rem;
  }

  .cta-submit button {
    border: 0;
    padding: 0;
    background: #00e;
    color: #fff;
    text-align: center;
    height: 4rem;
    width: 15rem;
    cursor: pointer;
    box-shadow: 0 0.4rem 0.4rem 0 rgba(0, 0, 0, 0.25);
  }

  .cta-business {
    max-width: 29rem;
    gap: 0.75rem;
    display: flex;
    flex-direction: column;
  }

  .cta-start {
    display: flex;
    gap: 0.75rem;
    flex-direction: column;
  }

  .cta-business-description {
    color: #000;
    font-family: Open Sans;
    font-size: 16px;
    font-style: normal;
    font-weight: 300;
    line-height: normal;
  }

  .cta-business-title {
    color: #000;
    font-size: 2rem;
    font-weight: 700;
  }

  .hero-title {
    display: flex;
    gap: 3rem;
  }

  .left-border {
    position: absolute;
    top: 2rem;
    left: -3.5rem;
    width: 0.3rem;
    height: 17rem;
    flex-shrink: 0;
    background: #00e;
  }

  .hero {
    width: 75%;
    margin-top: 1rem;
    margin-left: auto;
    margin-right: auto;
    background: linear-gradient(
        146deg,
        rgba(233, 233, 233, 0.2) 23.91%,
        rgba(0, 0, 0, 0) 80.07%
      ),
      #f8f8f9;
  }

  .hero h1 {
    position: relative;
    font-weight: 500;
    font-size: 7rem;
    line-height: 9rem;
  }

  .decision {
    font-size: inherit;
    color: #00e;
    font-weight: 300;
  }
</style>
