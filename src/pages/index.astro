---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import { withBase } from "../utils/config-utils";
const blueArrowImageUrl = withBase("/images/blue-arrow.svg");
const rightChevronImageUrl = withBase("/images/right-chevron.svg");
import SubscribeButton from "../components/SubscribeButton.jsx"; 
---

<Layout title="Styx" description="Styx">
  <NavBar />
  <div class="main">
    <section class="hero">
      <div class="hero-title">
        <div class="left-border"></div>
        <span class="title"
          >Augmente tes chances de<br />prendre la bonne <span class="decision"
            >d√©cision.</span
          ></span
        >
      </div>
      <SubscribeButton client:load rightChevronImageUrl={rightChevronImageUrl} blueArrowImageUrl={blueArrowImageUrl}/>
    </section>
    <section class="testimonials"></section>
  </div>
</Layout>

<style>   
  .hero-title {
    position: relative;
    display: flex;
    gap: 3rem;
  }

  .left-border {
    position: absolute;
    top: 2.35rem;
    left: -3.5rem;
    width: 0.3rem;
    height: 15.9rem;
    flex-shrink: 0;
    background: #00e;
  }

  .testimonials {
    width: 75%;
  }

  .hero {
    padding-left: 22rem;
    margin-top: 5rem;
    padding-bottom: 3rem;
    background: linear-gradient(
        146deg,
        rgba(233, 233, 233, 0.2) 23.91%,
        rgba(0, 0, 0, 0) 80.07%
      ),
      #f8f8f9;
  }

  .title {
    font-weight: 500;
    font-size: 7rem;
    line-height: 9rem;
  }

  .decision {
    font-size: inherit;
    color: #00e;
    font-weight: 300;
  }
</style>
