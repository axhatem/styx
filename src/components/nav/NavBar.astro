---
import { Image } from "astro:assets";
import { withBase } from "../../utils/config-utils";
const blueArrowImageUrl = withBase("/images/blue-arrow.svg");
---

<header>
  <div class="header-wrapper">
    <a href="#home">
      <img src="path_to_logo.png" alt="Site Logo" />
    </a>
    <nav>
      <a href="#">A PROPOS</a>
      <a href="#">ARTICLES</a>
      <a href="#">NEWSLETTER</a>
      <a href="#"
        ><Image
          class="blue-arrow-img"
          src={blueArrowImageUrl}
          alt="Arrow"
          width={20}
          height={20}
        />
         COURS</a
      >
    </nav>
  </div>
</header>

<style>
  .blue-arrow-img {
    width: 1rem;
    height: 1rem;
  }

  .header-wrapper {
    width: 80%;
    margin: auto;
    display: flex;
    justify-content: space-between;
  }

  header {
    height: 5rem;
    border: 0.1rem solid #eee;
    background: #fcfcfc;
    box-shadow: 0px 0.1rem 0.1rem 0 rgba(0, 0, 0, 0.25);
    display: flex;
    align-items: center;
  }

  nav a {
    text-decoration: none;
    margin-right: 10px;
  }

  nav a:hover {
    color: #ddd;
  }
</style>
