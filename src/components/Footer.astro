---
import { withBase } from "../utils/config-utils.ts";
const legalMentionsPageUrl = withBase("/mentions-legales");
const contactUsPageUrl = withBase("/contact");

---
<footer>
  <section class="footer">
    <span class="foolter-logo">© styx 2024</span>
    <span class="footer-pages">
      <a class="footer-text" href={legalMentionsPageUrl}>Mentions légales</a>
      <a class="footer-text" href={contactUsPageUrl}>Contact</a>
      <span class="footer-landing-x">Réalisé par LANDING-X</span>
    </span>
  </section>
</footer>


<style>

  .footer-landing-x{
    color: #9B0C3E;
  }

  footer {
    background: #eee;
    border-top: 2px solid #07072D;
    width: 100%;
  }

   .footer {
    font-size: 1.2rem;
    display: flex;
    justify-content: space-between;
    margin: 0 30rem;
    height: 5rem;
    align-items: center;
  }

  .footer-pages {
    display: flex;
    gap: 1.5rem;
  }

  a.footer-text {
    color: black;
    text-align: center;
    text-decoration: none;
    letter-spacing: 0.036rem;
    font-size: 1.2rem;
  }
</style>
