---
import { Image } from "astro:assets";
import { withBase } from "../utils/config-utils";
const blueArrowImageUrl = withBase("/images/blue-arrow.svg");
const logoImageUrl = withBase("/images/logo.png");
---

<header>
  <div class="header-wrapper">
    <div class="logo-container">
      <Image
        class="Styx Logo"
        src={logoImageUrl}
        alt="Arrow"
        width={20}
        height={20}
      />
      <a href="#">STYX</a>
    </div>
    <nav>
      <a href="#">A PROPOS</a>
      <a href="#">ARTICLES</a>
      <a href="#">NEWSLETTER</a>
      <a href="#"
        ><Image
          class="blue-arrow-img"
          src={blueArrowImageUrl}
          alt="Arrow"
          width={20}
          height={20}
        />
         COURS</a
      >
    </nav>
  </div>
</header>

<style>
  .logo-container {
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    gap: 0.3rem;
  }

  nav {
    display: flex;
    align-items: center;
    gap: 5rem;
  }

  p {
    font-size: 1.2rem;
  }

  .blue-arrow-img {
    width: 1rem;
    height: 1rem;
  }

  .header-wrapper {
    width: 80%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
  }

  header {
    height: 5rem;
    border: 0.1rem solid #eee;
    background: #fcfcfc;
    box-shadow: 0px 0.1rem 0.1rem 0 rgba(0, 0, 0, 0.25);
    display: flex;
    align-items: center;
  }

  a {
    text-decoration: none;
    font-size: 1.2rem;
    color: #07072d;
    font-weight: 400;
  }

  nav a:hover {
    color: #ddd;
  }
</style>
